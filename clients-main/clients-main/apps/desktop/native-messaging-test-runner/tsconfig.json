{
  "extends": "../tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "declaration": false,
    "paths": {
      "@src/*": ["src/*"]
    },
    "plugins": [
      {
        "name": "typescript-strict-plugin"
      }
    ]
  },
  "exclude": ["node_modules"]
}
